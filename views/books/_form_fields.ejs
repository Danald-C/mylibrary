<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.name %>" />
</div>
<div>
    <label>Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
            <option label="<%= author.name %>" value="<%= author._id %>" <%= author._id === book.author ? 'selected' : '' %>><%= author.name %></option>
        <% }) %>
    </select>
</div>
<div>
    <label>Published Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" />
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount == null ? 1 : book.pageCount %>" />
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" />
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>